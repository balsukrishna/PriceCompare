<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Black" >
 
    <!-- 2 columns -->
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >
 
      <TextView
            android:id="@+id/txt_uob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Skyblue"
            android:text="@string/txt_uob" />
        <Button
            android:id="@+id/bt_uob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="refreshData"
            android:textColor="@color/White"
            android:text="@string/bt_refresh" />
    </TableRow>
 
    <!-- edittext span 2 column -->
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >
 
          <EditText
            android:id="@+id/edit_uob"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Skyblue"
            android:hint="@string/wait" />
    </TableRow>
 
    <!-- just draw a red line -->
    <View
        android:layout_height="2dip"
        android:background="@color/Skyblue" />
 
 <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >
 
         <TextView
            android:id="@+id/txt_hdfc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_hdfc"
            android:textColor="@color/Skyblue" />
         
            <Button
            android:id="@+id/bt_hdfc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="refreshData"
            android:textColor="@color/White"
            android:text="@string/bt_refresh" />

    </TableRow>
 
    <!-- edittext span 2 column -->
    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >
 
          <EditText
            android:id="@+id/edit_hdfc"
            android:layout_width="20dp"
            android:textColor="@color/Skyblue"
            android:layout_height="wrap_content"
            android:hint="@string/wait" />
          
    </TableRow>
             <View
        android:layout_height="2dip"
        android:background="@color/Skyblue" />
             
               <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >
 
      <TextView
            android:id="@+id/txt_uobrupee"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Skyblue"
            android:text="@string/txt_uob_rupee" />
      
          <EditText
            android:id="@+id/edit_uobrupee"
            android:layout_width="wrap_content"
            android:textColor="@color/Skyblue"
            android:layout_height="60dp"
            android:hint="@string/wait" />
     
    </TableRow>
    
   <View
        android:layout_height="2dip"
        android:background="@color/Skyblue" />
   
       <!--  Hyd -->
    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >
 
      <TextView
            android:id="@+id/txt_hyd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Skyblue"
            android:text="@string/txt_hyd" />
        <Button
            android:id="@+id/bt_hyd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="refreshData"
            android:textColor="@color/White"
            android:text="@string/bt_refresh" />
    </TableRow>
 
    <!-- edittext span 2 column -->
    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >
 
          <EditText
            android:id="@+id/edit_hyd"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Skyblue"
            android:hint="@string/wait" />
    </TableRow>
    
      <View
        android:layout_height="2dip"
        android:background="@color/Skyblue" />
     <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <Button
            android:id="@+id/bt_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:onClick="closeapp"
            android:textColor="@color/White"
            android:text="@string/bt_close" />
    </TableRow>
</TableLayout>